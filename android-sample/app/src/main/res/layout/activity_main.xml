<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/loginContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원번호" />

            <EditText
                android:id="@+id/editUserId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:inputType="text"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="비밀번호" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:inputType="textPassword"
                android:singleLine="true" />

            <TextView
                android:id="@+id/textLoginError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="로그인 실패"
                android:textColor="#D32F2F"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="로그인" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reserveContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="예매 페이지"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/reserveFormContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="출발역" />

                <AutoCompleteTextView
                    android:id="@+id/editDeparture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="예: 서울"
                    android:singleLine="true"
                    android:dropDownHeight="220dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="도착역" />

                <AutoCompleteTextView
                    android:id="@+id/editArrival"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="예: 부산"
                    android:singleLine="true"
                    android:dropDownHeight="220dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="날짜 (하루 선택)" />

                <Button
                    android:id="@+id/buttonDatePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="날짜 선택" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="최소 출발 시간 (HH:mm)" />

                <EditText
                    android:id="@+id/editMinTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="예: 06:00"
                    android:inputType="time"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="최대 출발 시간 (HH:mm)" />

                <EditText
                    android:id="@+id/editMaxTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="예: 23:00"
                    android:inputType="time"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="평균 조회 간격(초)" />

                <EditText
                    android:id="@+id/editAvgInterval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="예: 2.0"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/buttonStartReserve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="예매 시작" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reserveProgressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textProgressTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="예매 진행 중..."
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textStartedAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="시작 시간: -" />

                <TextView
                    android:id="@+id/textAttemptCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="조회 시도: 0회" />

                <TextView
                    android:id="@+id/textNextDelay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="다음 조회 대기: -" />

                <TextView
                    android:id="@+id/textResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
